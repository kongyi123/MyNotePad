<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_margin="5dp"
                android:foreground="#33223333"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/paper_weight_color_circle"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/circle_black"/>
                    <TextView
                        android:id="@+id/paper_weight_item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:textSize="20sp"
                        android:paddingHorizontal="5dp"
                        android:text="집들이"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/paper_weight_question_tv"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:textSize="25sp"
                android:text="question text"/>

            <TextView
                android:id="@+id/paper_weight_sub_tv"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:textSize="18sp"
                android:text=" * sub text"/>

            <RadioGroup
                android:id="@+id/paper_weight_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/paper_weight_radio_button_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_margin="10dp"
                    android:minWidth="100dp"
                    android:text="Yes"/>
                <RadioButton
                    android:id="@+id/paper_weight_radio_button_no"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_margin="10dp"
                    android:minWidth="100dp"
                    android:text="No"/>
            </RadioGroup>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="10dp">
                <EditText
                    android:background="@null"
                    android:padding="5dp"
                    android:id="@+id/paper_weight_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>